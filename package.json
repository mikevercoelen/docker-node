{
  "name": "docker-node",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development nodemon ./src/index.js --exec \"node --preserve-symlinks -r dotenv/config\"",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "precommit": "lint-staged",
    "docker-build": "docker build -t docker-node .",
    "docker-run": "docker run -p 3001:3000 docker-node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "mongoose": "^5.4.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9"
  }
}
